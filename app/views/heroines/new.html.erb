<h1>Heroine Form</h1>

<%= form_for @heroine do |f| %>
    <%=f.label :name %>
    <%=f.text_field :name%>
    <br /><br />
    <%=f.label :super_name %>
    <%=f.text_field :super_name%>
    <br /><br />
    Power <%=f.collection_select :power_id, @powers, :id, :name %>
    <br /><br />
    <%=f.submit%>
<% end %>
<% if flash[:notice] %> 
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<br />
<p><%=link_to "Back to Heroines", heroines_path%></p>
